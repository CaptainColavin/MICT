{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

  <div class="row">
    <div class=" col-md-offset-2 col-md-2">
      <div class="form-group row">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" class="form-control mb-2" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur" />
      </div>

      <div class="form-group row">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" class="form-control mb-2" id="password" name="_password" required="required" placeholder="Mot de pass"/>
      </div>


      <div class="form-group row">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
      </div>


      <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
  </div>
</form>

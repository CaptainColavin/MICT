{% extends 'base.html.twig' %}
{% block body %}
<div class="container" style="background-color:rgba(255, 255, 255, 0.7); text-align:center; ">

<div class="col-md-9">
    <div class="col-md-12">
        <h2 style="color: #a700ab">Voici la liste des articles en vente !</h2>

